[
  {
    "outputFileName": "wwwroot/css/style.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/style.css"
    ]
  },
  {
    "outputFileName": "wwwroot/css/colors.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "wwwroot/css/colors.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/custom.min.js",
    "inputFiles": [
      "wwwroot/js/custom.js"
    ],
    // Optionally specify minification options
    "minify": {
      "enabled": true,
      "renameLocals": true
    },
    // Optionally generate .map file
    "sourceMap": false
  }
]
